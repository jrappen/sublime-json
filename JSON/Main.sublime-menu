[
    {
        "id": "preferences",
        "children":
        [
            {
                "id": "package-settings",
                "children":
                [
                    {
                        "caption": "JSON",
                        "children":
                        [
                            {
                                "caption": "JSON",
                                "children":
                                [
                                    {
                                        "caption": "Minify",
                                        "command": "json_minify"
                                    },
                                    {
                                        "caption": "Prettify",
                                        "command": "json_prettify"
                                    },
                                    { "caption": "-" },
                                    {
                                        "caption": "Automatically prettify before saving",
                                        "command": "json_toggle_auto_prettify",
                                        "checkbox": true
                                    },
                                    {
                                        "caption": "Settings - Syntax Specific",
                                        "command": "edit_settings",
                                        "args":
                                        {
                                            "base_file": "${packages}/JSON/JSON.sublime-settings",
                                            "default": "{\n\t$0\n}\n"
                                        }
                                    },
                                    { "caption": "-" },
                                    {
                                        "caption": "JSON Documentation",
                                        "children":
                                        [
                                            {
                                                "caption": "JSON Specs",
                                                "command": "open_url",
                                                "args":
                                                {
                                                    "url": "https://www.json.org/json-en.html"
                                                }
                                            },
                                            {
                                                "caption": "IETF RFC 7159",
                                                "command": "open_url",
                                                "args":
                                                {
                                                    "url": "https://datatracker.ietf.org/doc/html/rfc7159"
                                                }
                                            },
                                            {
                                                "caption": "IETF RFC 8259",
                                                "command": "open_url",
                                                "args":
                                                {
                                                    "url": "https://datatracker.ietf.org/doc/html/rfc8259"
                                                }
                                            },
                                            {
                                                "caption": "ECMA 404 (2nd Edition, Dec 2017)",
                                                "command": "open_url",
                                                "args":
                                                {
                                                    "url": "https://www.ecma-international.org/publications-and-standards/standards/ecma-404/"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "caption": "JSONC (JSON with Comments)",
                                "children":
                                [
                                    {
                                        "caption": "Minify",
                                        "command": "jsonc_minify",
                                        "args":
                                        {
                                            "force": true
                                        }
                                    },
                                    {
                                        "caption": "Prettify",
                                        "command": "jsonc_prettify",
                                        "args":
                                        {
                                            "force": true
                                        }
                                    }
                                ]
                            },
                            {
                                "caption": "JSON5",
                                "children":
                                [
                                    {
                                        "caption": "JSON5 Specs",
                                        "command": "open_url",
                                        "args":
                                        {
                                            "url": "https://spec.json5.org/#summary-of-features"
                                        }
                                    }
                                ]
                            },
                            { "caption": "-" },
                            {
                                "caption": "Support",
                                "children":
                                [
                                    {
                                        "caption": "View JSON package changelog (via GitHub)",
                                        "command": "open_url",
                                        "args":
                                        {
                                            "url": "https://github.com/sublimehq/Packages/commits/master/JSON"
                                        }
                                    },
                                    {
                                        "caption": "Report a JSON package issue (via GitHub)",
                                        "command": "open_url",
                                        "args":
                                        {
                                            "url": "https://github.com/sublimehq/Packages/issues?q=JSON+is%3Aissue+is%3Aopen+sort%3Aupdated-desc"
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
]
